{
	"compilerOptions": {
		// Output
		"target": "ES2022",
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"rootDir": "./src",
		"outDir": "./dist",
		"noEmit": false,

		// Strictness & DX
		"strict": true,
		"noImplicitAny": true,
		"resolveJsonModule": true,
		"sourceMap": true,

		// Paths
		"baseUrl": "./src",
		"paths": {
			"#/*": ["*"]
		}
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
